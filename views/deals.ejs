<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/main.css">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
    /* Updated wrapper style for a sticky footer and centered content */
    .wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh; /* Full viewport height */
      justify-content: space-between; /* Push header to top and footer to bottom */
    }
    .logo {
      width: 100px;
      height: 100px;
      border-radius: 50%;
    }
    .container-start {
      background-color: pink;
    }
    .btn {
      background-color: palevioletred;
    }
    .btn:hover {
      background-color: rgb(228, 36, 100);
      transition: 0.7s;
    }
    body {
      background: white;
    }
    .main-content {
      flex: 1;
    }
    .footer {
      background-color: pink;
    }
    .ft-container p {
      color: white;
    }
    .btn-primary {
      background-color: palevioletred;
      border: none;
    }
    .btn-primary:hover {
      background-color: rgb(228, 36, 100);
      transition: 0.3s;
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <!-- Header Section -->
    <div class="container-start p-3 d-flex border-bottom justify-content-between align-items-center">
      <a href="/">
        <img src="/images/logo.png" alt="Logo" class="logo">
      </a>
      <div>
        <button class="btn me-2 text-white" onclick="window.location.href='/'">Home</button>
        <button class="btn me-2 text-white" onclick="window.location.href='/travel-guide'">Guides</button>
        <button class="btn me-2 text-white" onclick="window.location.href='/hotels'">Hotels</button>
        <button class="btn me-2 text-white" onclick="window.location.href='/contact'">Contact Us</button>
        <a href="<%= user ? '/logout' : '/login' %>" class="btn me-2 text-white">
          <%= user ? `Logout (${user.username})` : "Log In / Sign Up" %>
        </a>
      </div>
    </div>

    <!-- Main Promotions Content -->
    <div class="main-content">
      <div class="container mt-5">
        <h1 class="text-center fw-bold">Promotions & Deals</h1>
        <p class="text-center text-muted">Discover exclusive hotel discounts and travel offers curated just for you!</p>
        <div class="row">
          <% if (deals && deals.length > 0) { %>
            <% deals.forEach(deal => { %>
              <div class="col-md-4 mb-4">
                <div class="card h-100">
                  <% if (deal.image) { %>
                    <img src="<%= deal.image %>" class="card-img-top" alt="<%= deal.title %>" style="height: 200px; object-fit: cover;">
                  <% } %>
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= deal.title %></h5>
                    <p class="card-text flex-grow-1"><%= deal.description %></p>
                    <a href="/hotels" class="btn btn-primary mt-2">Book now!</a>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="col-12">
              <p class="text-center">No promotions available at the moment. Please check back later!</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Footer Section -->
    <footer class="footer p-3 border-top">
      <div class="ft-container text-center">
        <p>&copy; 2025 Travel Itinerary Planner from Team 86. All Rights Reserved</p>
        <div class="d-flex justify-content-center">
          <a href="/" class="me-3 text-white"><i class="bi bi-facebook"></i></a>
          <a href="/" class="me-3 text-white"><i class="bi bi-instagram"></i></a>
          <a href="/" class="me-3 text-white"><i class="bi bi-twitter-x"></i></a>
        </div>
      </div>
    </footer>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
