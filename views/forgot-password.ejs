<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        html, body {
            margin: 0;
            padding: 0;
        }

        /* Set background image inside wrapper */
        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-size: 1920px 1080px;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            transition: background-image 1s ease-in-out;
        }
        .logo{
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }

        .container-start{
            background-color: pink;
        }

        .btn{
            background-color: palevioletred;
        }

        .btn:hover{
            background-color: rgb(228, 36, 100);
            transition: 0.7s;
        }

        body{
            background: white;
        }

        .main-content{
            flex: 1;
        }

        .footer{
            background-color: pink;
        }

        .ft-container p{
            color: white;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            padding: 30px;
            width: 350px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <div class="wrapper">
        <div class="container-start p-3 d-flex border-bottom justify-content-between align-items-center">
            <a href="/">
                <img src="/images/logo.png" alt="Logo" class="logo">
            </a>

            <!-- Menu Toggle Button (☰) for small screens -->
            <button class="menu-toggle d-lg-none">☰</button>

            <!-- Navigation Buttons -->
            <div class="nav-buttons">
                <button class="btn me-2 text-white" onclick="window.location.href='/travel-guide'">Guides</button>
                <button class="btn me-2 text-white" onclick="window.location.href='/hotels'">Hotels</button>
                <button class="btn me-2 text-white" onclick="window.location.href='/deals'">Promotions</button>
                <button class="btn me-2 text-white" onclick="window.location.href='/contact'">Contact Us</button>
                <a href="<%= user ? '/logout' : '/login' %>" class="btn me-2 text-white">
                    <%= user ? `Logout (${user.username})` : "Log In / Sign Up" %>
                </a>
            </div>
        </div>

        <!-- Main Content Section -->
        <div class="d-flex justify-content-center align-items-center min-vh-100">
            <div class="card p-4 shadow-lg" style="width: 350px;">
                </br>
                <h2 class="text-center mb-3">Forgot Password</h2>

                <!-- Success & Error Message -->
                <div id="error-message" class="alert alert-danger text-center d-none mt-3"></div>
                <div id="success-message" class="alert alert-success text-center d-none mt-3"></div>

                <!-- Forgot Password Form -->
                <form id="forgot-password-form" action="/forgot-password" method="POST">

                    <div class="mb-3">
                        <input type="text" id="username" class="form-control" name="username" placeholder="Username" required>
                    </div>

                    <div class="mb-3 position-relative">
                        <input type="password" id="newPassword" class="form-control" name="newPassword" placeholder="New Password" required>
                        <i class="bi bi-eye-slash" id="toggle-password" style="position: absolute; right: 10px; top: 10px; cursor: pointer;"></i>
                    </div>

                    <div id="confirm-password-container" class="mb-3 position-relative d-none">
                        <input type="password" id="confirmPassword" class="form-control" name="confirmPassword" placeholder="Confirm Password" required>
                        <i class="bi bi-eye-slash" id="toggle-confirm-password" style="position: absolute; right: 10px; top: 10px; cursor: pointer;"></i>
                    </div>

                    <button type="button" id="next-btn" class="btn btn-custom w-100 text-white">Reset Password</button>
                    <button type="submit" id="submit-btn" class="btn btn-custom w-100 text-white d-none">Submit</button>
                </form>
            
                <!-- Back to Login Link -->
                <div class="text-center mt-3">
                <small><a href="/login">Back to Login</a></small>
            </div>
        </br>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="footer p-3 border-top">
        <div class="ft-container text-center">
            <p>&copy; 2025 Travel Itinerary Planner from Team 86. All Rights Reserverd</p>
            <div class="d-flex justify-content-center">
                <a href="/" class="me-3 text-white"><i class="bi bi-facebook"></i></a>
                <a href="/" class="me-3 text-white"><i class="bi bi-instagram"></i></a>
                <a href="/" class="me-3 text-white"><i class="bi bi-twitter-x"></i></a>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="/js/bootstrap.min.js"></script>

    <!-- JavaScript Logic -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
        const errorMessage = document.getElementById("error-message");
        const successMessage = document.getElementById("success-message");
        const nextBtn = document.getElementById("next-btn");
        const submitBtn = document.getElementById("submit-btn");
        const confirmPasswordContainer = document.getElementById("confirm-password-container");
        const forgotPasswordForm = document.getElementById("forgot-password-form");

        function toggleVisibility(fieldId, iconId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById(iconId);
            field.type = field.type === "password" ? "text" : "password";
            icon.classList.toggle("bi-eye");
            icon.classList.toggle("bi-eye-slash");
        }

        document.getElementById("toggle-password").addEventListener("click", () => toggleVisibility("newPassword", "toggle-password"));
        document.getElementById("toggle-confirm-password").addEventListener("click", () => toggleVisibility("confirmPassword", "toggle-confirm-password"));

        nextBtn.addEventListener("click", function () {
            const newPassword = document.getElementById("newPassword").value;
            if (!passwordRegex.test(newPassword)) {
                errorMessage.innerHTML = "Password must be:<br>- At least 8 characters long<br>- Include an uppercase letter<br>- Include a lowercase letter<br>- Include a number<br>- Include a special character (@$!%*?&)";
                errorMessage.classList.remove("d-none");
                return;
            }
            errorMessage.classList.add("d-none");
            confirmPasswordContainer.classList.remove("d-none");
            nextBtn.classList.add("d-none");
            submitBtn.classList.remove("d-none");
        });

        forgotPasswordForm.addEventListener("submit", function (event) {
            event.preventDefault();
            const newPassword = document.getElementById("newPassword").value;
            const confirmPassword = document.getElementById("confirmPassword").value;

            if (newPassword !== confirmPassword) {
                errorMessage.textContent = "Passwords do not match.";
                errorMessage.classList.remove("d-none");
                return;
            }

            errorMessage.classList.add("d-none");
            successMessage.textContent = "Password reset successfully!";
            successMessage.classList.remove("d-none");

            ["newPassword", "confirmPassword"].forEach(id => document.getElementById(id).disabled = true);
            ["toggle-password", "toggle-confirm-password"].forEach(id => document.getElementById(id).style.display = "none");
            submitBtn.disabled = true;
        });

        // Background Image Logic
        const images = ["/images/p1.jpg", "/images/p2.jpg", "/images/p3.jpg"];
        let index = 0;
        function changeBackground() {
            document.querySelector(".wrapper").style.backgroundImage = `url('${images[index]}')`;
            index = (index + 1) % images.length;
        }
        changeBackground();
        setInterval(changeBackground, 10000);

        console.log("JavaScript is running.");
    });
</script>
</body>
</html>

