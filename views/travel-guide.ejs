<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Guide</title>
    <link rel="stylesheet" href="/css/main.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        /* Add some basic styling for the page */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .blog-post {
            border: 1px solid #ccc;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 5px;
        }
        .blog-post img {
            max-width: 100%;
            height: auto;
            margin-top: 10px;
        }
        .country-buttons {
            margin-bottom: 20px;
        }
        .country-buttons button {
            background-color: palevioletred;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .country-buttons button:hover {
            background-color: rgb(228, 36, 100);
        }

        /* Add styles for the header and logout button */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: pink;
            margin-bottom: 20px;
            border-radius: 5px;
        }
        .logout-btn {
            background-color: palevioletred;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }

        .logout-btn:hover {
            background-color: rgb(228, 36, 100);
            transition: 0.3s;
        }
        .logo{
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <div class="header">
        <a href="/">
            <img src="/images/logo.png" alt="Logo" class="logo">
        </a>
        <div>
            <% if (user) { %>
                <span class="me-2">Welcome, <%= user.username %>!</span>
                <a href="/logout" class="logout-btn">Logout</a>
            <% } else { %>
                <a href="/login" class="logout-btn">Log In / Sign Up</a>
            <% } %>
        </div>
    </div>

    <h1>Travel Guide</h1>

    <div class="country-buttons">
      <button onclick="filterPosts('Japan')">Japan</button>
      <button onclick="filterPosts('France')">France</button>
      <button onclick="filterPosts('China')">China</button>
      <button onclick="filterPosts('Singapore')">Singapore</button>
      <button onclick="filterPosts('All')">All</button> </div>

    <div id="blog-posts-container">
    <% blogPosts.forEach(post => { %>
        <div class="blog-post" data-country="<%= post.country %>">  
          <h2><%= post.title %></h2>
          
          <p>Country: <%= post.country %></p> <% if (post.image_path) { %> <img src="<%= post.image_path %>" alt="<%= post.title %>"> <% } %>
          <p>By: <%= post.username || 'Anonymous' %> </p>
          <p><%= post.like_count || 0 %> Likes</p>
          <p><%= post.comment_count || 0 %> Comments</p>
          <a href="/travel-guide/<%= post.post_id %>">Read More</a> 
        </div>
      <% }); %>
    </div>

    <script>
      function filterPosts(country) {
        const posts = document.querySelectorAll('.blog-post');
        posts.forEach(post => {
          const postCountry = post.dataset.country;
          if (country === 'All' || postCountry === country) {
            post.style.display = 'block'; // Show the post
          } else {
            post.style.display = 'none'; // Hide the post
          }
        });
      }
    </script>
    <!-- Bootstrap JS Bundle -->
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>

