                            <%}) %>
                            <% if (members.length > 5) { %>
                                <h5>+ <%= members.length - 5 %></h5>
                            <% } %>
                        </div>
                        <div class="trip-description p-auto mt-5">
                            <p class="p-3 fs-5"><b>Description: </b><%= trip.description %></p>
                        </div>
                    </div>
                    <div class="trip-image p-3"> 
                        <img src= "<%= trip.image_path %>" alt="<%= trip.name %>">
                    </div>
                </div>
 
