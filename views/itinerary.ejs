document.addEventListener("DOMContentLoaded", function () {
    let votesRamen = 5;
    let votesSoranoiro = 5;

    function updateBar() {
        let totalVotes = votesRamen + votesSoranoiro;
        let ramenPercentage = Math.round((votesRamen / totalVotes) * 100);
        document.getElementById("barFill").style.width = ramenPercentage + "%";
        document.getElementById("voteText").textContent = ramenPercentage + "%";
    }

    window.vote = function (restaurant) {
        if (restaurant === "ramen") {
            votesRamen++;
        } else if (restaurant === "soranoiro") {
            votesSoranoiro++;
        }
        updateBar();
    };

    updateBar(); // Set initial bar state
});

document.addEventListener("DOMContentLoaded", function () {
    const voteButtons = document.querySelectorAll(".vote-btn");

    voteButtons.forEach(button => {
        button.addEventListener("click", function () {
            let voteScore = this.closest(".shopping-footer").querySelector(".vote-score");
            let currentScore = parseInt(voteScore.textContent.split("/")[0]);

            if (this.classList.contains("upvote")) {
                currentScore++;
            } else if (this.classList.contains("downvote")) {
                currentScore = Math.max(0, currentScore - 1);
            }

            voteScore.textContent = `${currentScore}/5 Voted`;
        });
    });
});


