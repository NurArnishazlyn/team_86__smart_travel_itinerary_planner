<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <title>Manage Trips</title>
</head>
<body>
    <div class="wrapper">
        <!-- Navigation Bar -->
        <div class="container-start p-3 d-flex border-bottom justify-content-between align-items-center">
            <a href="/">
                <img src="/images/logo.png" alt="Logo" class="logo">
            </a>

            <!-- Menu Toggle Button (☰) for small screens -->
            <button class="menu-toggle d-lg-none">☰</button>

            <!-- Navigation Buttons -->
            <div class="nav-buttons">
                <button class="btn me-2 text-white" onclick="redirectToHome()">Home</button>
                <button class="btn me-2 text-white" onclick="redirectToGuides()">Guides</button>
                <button class="btn me-2 text-white">Hotels</button>
                <button class="btn me-2 text-white">Promotions</button>
            </div>
        </div>

        <div class="main-content p-3">
          

        </div>
        
    </div>

    <!-- Footer -->
    <footer class="footer p-3 border-top text-center text-white">
        <p>&copy; 2025 Travel Itinerary Planner from Team 86. All Rights Reserved</p>
        <div class="d-flex justify-content-center">
            <a href="/" class="me-3 text-white"><i class="bi bi-facebook"></i></a>
            <a href="/" class="me-3 text-white"><i class="bi bi-instagram"></i></a>
            <a href="/" class="me-3 text-white"><i class="bi bi-twitter-x"></i></a>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const menuToggle = document.querySelector(".menu-toggle");
            const navButtons = document.querySelector(".nav-buttons");

            menuToggle.addEventListener("click", function () {
                navButtons.classList.toggle("active");
            });

            window.addEventListener("resize", function () {
                if (window.innerWidth >= 420) {
                    navButtons.classList.remove("active");
                }
            });
        });

        function redirectToHome() 
        {
        window.location.href = "/"
        }

        function redirectToGuides() 
        {
        window.location.href = "/travel-guide"
        }
    </script>

    <!-- CSS Styling -->
    <style>
        html, body{
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .wrapper{
            display: flex;
            flex-direction: column;
            min-height: 760px;
        }

        .logo{
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }

        .container-start{
            background-color: pink;
            box-shadow: 0px 10px 5px rgba(0, 0, 0, 0.1)
        }

        .btn{
            background-color: palevioletred;
        }

        .btn:hover{
            background-color: rgb(228, 36, 100);
            transition: 0.7s;
        }

        body{
            background-color: white;
        }

        .main-content{
            flex: 1;
            background-color: rgb(254, 252, 253);
        }

        .footer{
            background-color: pink;
        }

        .ft-container p{
            color: white;
        }

/* Default: Hide navigation buttons on small screens */
@media (max-width: 420px) {
    .nav-buttons {
        visibility: hidden;
        opacity: 0;
        position: absolute;
        top: 110px;
        right: 10px;
        background: white;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
    }

    /* Show buttons when toggle is active */
    .nav-buttons.active {
        visibility: visible;
        opacity: 1;
    }

    /* Show the menu toggle below 420px */
    .menu-toggle {
        display: block;
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
    }

    .carousel 
        {
            margin: 0;
            padding: 0;
            max-width: 1600px; 
            background-color: rgb(255, 254, 255);
            box-shadow: 0px 1px 5px black;
            border-radius: 10px; 
        }

        .carousel-image 
        {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }
}

@media (min-width: 421px) and (max-width: 603px) {
    .nav-buttons {
        visibility: visible;
        opacity: 1;
        position: static;
        background: none;
        box-shadow: none;
        flex-direction: row;
    }

    .menu-toggle {
        display: none;
    }
    .carousel 
        {
            margin: 0;
            padding: 0;
            max-width: 1600px; 
            background-color: rgb(255, 254, 255);
            box-shadow: 0px 1px 5px black;
            border-radius: 10px; 
        }

        .carousel-image 
        {
            width: 100%;
            height: 430px;
            object-fit: cover;
            border-radius: 10px;
        }

}

/* Above 420px: Show buttons normally, hide toggle button */
@media (min-width: 604px) {
    .nav-buttons {
        visibility: visible;
        opacity: 1;
        position: static;
        background: none;
        box-shadow: none;
        flex-direction: row;
    }

    .menu-toggle {
        display: none;
    }
}

    </style>
</body>
</html>